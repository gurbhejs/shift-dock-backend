{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=shiftdock_db;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-key-here-minimum-32-characters-long",
    "Issuer": "ShiftDock.API",
    "Audience": "ShiftDock.Client",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "AwsSettings": {
    "Region": "us-east-1",
    "UserPoolId": "your-user-pool-id",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret"
  },
  "Cors": {
    "AllowedOrigins": ["*"]
  }
}
